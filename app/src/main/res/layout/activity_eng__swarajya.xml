<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#102027"
    tools:context="com.shreeganesha.developers.swarajya_dhol_tasha.Eng_Swarajya">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/swarajya"
            android:id="@+id/imageView" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textColor="#fff"
            android:textSize="15sp"
            android:text="@string/English"
            android:layout_marginTop="252dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />


                    <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:src="@drawable/new4"
                                android:id="@+id/flex1"
                                android:layout_alignTop="@+id/textView"
                                android:layout_alignParentLeft="true"
                                android:layout_alignParentStart="true" />




                    <ImageView
                        android:paddingTop="100sp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/new3"
                        android:layout_marginTop="191dp"
                        android:id="@+id/imageView5"
                        android:layout_below="@+id/textView"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true" />

                    <ImageView
                        android:paddingTop="220sp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/new2"
                        android:layout_marginTop="220dp"
                        android:id="@+id/imageView6"
                        android:layout_alignTop="@+id/imageView5"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true" />

                    <ImageView
                        android:paddingTop="480sp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/new1"
                        android:layout_marginTop="149dp"
                        android:layout_below="@+id/flex1"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        />





    </RelativeLayout>



</android.support.v4.widget.NestedScrollView>
